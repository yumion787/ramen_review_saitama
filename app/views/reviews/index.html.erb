<div id="whole" class="" style="padding: 50px 0px;">
 <div class="center jumbotron">
  <div class="text-center" style="padding: 50px;">
    <h2>新着レビュー</h2>
  </div>
  <div class="text-right">
      <a class="btn btn-primary" href="reviews/new">レビュー投稿</a>
  </div>

<p id="notice"><%= notice %></p>

<div class="card mb-3">
    <div class="row no-gutters">
        <% @reviews.each do |review| %>
        <div class="col-md-4 my-auto ">
            <%= image_tag review.image.to_s %>
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title"><%= review.menu %></h5>
                <p><%= review.comment %></p>
                <p><%= review.image %></p>
                <%= link_to 'レビュー詳細', review, class: 'btn btn-primary' %>
            </div>
        </div>
        <% end %>

     </div>
  </div>
  
 </div>
</div>



<br>

 </div>
</div>