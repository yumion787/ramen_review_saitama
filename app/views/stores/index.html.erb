<div id="whole" class="" style="padding: 50px 0px;">
 <div class="center jumbotron">
  <div>
    <div class="text-center" style="padding: 50px;">
      <h2>店舗情報</h2>
    </div>
    
    <% if logged_in? %>
    <div class="text-right">
      <a class="btn btn-primary" href="stores/new">新規店舗登録</a>
    </div>
    <% end %>
    
  </div>
    
    
  <p id="notice"><%= notice %></p>
  
  
  <div class="card mb-3">
    <div class="row no-gutters">
        
        <% @stores.each do |store| %>
        
        <div class="col-md-3" style="margin:0px 12px;">
                    <% if store.image? %>
                    <%= image_tag store.image.url, :size =>'140x140' %>
                    <% end %>
                    
        </div>
        
        
        <div class="col-md-8">
            <div class="card-body">
                    <h5 class="card-title"><%= store.name %></h5>
                    <p><%= store.address %></p>
                    <p><%= store.infomation %></p>
                    <%= link_to '店舗詳細', store, class: 'btn btn-primary' %>
                    <hr>
            </div>
         </div>
           
         <hr>
         
        <% end %>
        <%= paginate @stores %>
     </div>
  </div>
  
 </div>
</div>


<div id="footer" class="text-center mb-5">
  <!--<a class="" href="/">お問い合わせ</a>-->
  <br></br>
  <p>@ Takuya</p>
</div>