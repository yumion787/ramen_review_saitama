<div id="whole" class="" style="padding: 50px 0px;">
 <div class="center jumbotron">
  <div>
    <div class="text-center" style="padding: 50px;">
      <h2>店舗情報</h2>
    </div>
    <div class="text-right">
      <a class="btn btn-primary" href="stores/new">新規店舗登録</a>
    </div>
  </div>
    
    
  <p id="notice"><%= notice %></p>
  
  
  <div class="card">
    <div class="container">
        <% @stores.each do |store| %>
        <h5 class="card-title"><%= store.name %></h5>
        <div class="">
            <div class="card-body">
                <div class="col-md-4 my-auto">
                    <% if store.image? %>
                    <%= image_tag store.image.url, :size =>'150x150' %>
                    <% end %>
                </div>
                <div class="col-md-8">
                    <p><%= store.address %></p>
                    <p><%= store.infomation %></p>
                    <%= link_to '店舗詳細', store, class: 'btn btn-primary' %>
                </div>
            </div>
            <hr>
        </div>
        <% end %>
     </div>
  </div>
  
 </div>
</div>


<div id="footer" class="text-center mb-5">
