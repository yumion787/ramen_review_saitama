<div id="whole" class="" style="padding: 50px 0px;">
 <div class="center jumbotron">
  <div>
    <div class="text-center" style="padding: 50px;">
      <h2>店舗情報</h2>
    </div>
    <div class="text-right">
      <a class="btn btn-primary" href="stores/new">新規店舗登録</a>
    </div>
  </div>
    
    
  <p id="notice"><%= notice %></p>
  
 
  <div class="card mb-3">
    <div class="row no-gutters">
        <% @stores.each do |store| %>
        <div class="col-md-4 my-auto ">
            <h5 class="card-title"><%= store.name %></h5>
            <%= image_tag store.image.to_s %>
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <p><%= store.address %></p>
                <p><%= store.infomation %></p>
                <%= link_to '店舗詳細', store, class: 'btn btn-primary' %>
            </div>
            <hr>
        </div>
        
        <% end %>

     </div>
  </div>
  
 </div>
</div>


