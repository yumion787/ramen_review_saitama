<div id="whole" class="" style="padding: 50px 0px;">
 <div class="center jumbotron">
  <div class="">
    <div class="text-center" style="padding: 50px;">
      <h2>店舗情報</h2>
    </div>
    <div class="text-right">
      <a class="btn btn-primary" href="stores/new">新規店舗登録</a>
    </div>
  </div>
  
  <p id="notice"><%= notice %></p>
  
  
  <div class="card mb-3">
     <div class="row no-gutters">
       <% @stores.each do |store| %>
        <div class="col-md-4 my-auto">
            <%= store.image %>
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title"><%= store.name %></h5>
                <p><%= store.address %></p>
                <p><%= store.infomation %></p>
                <a class="btn btn-primary" href="/stores">続きを読む</a>
            </div>
        </div>
        <% end %>
     </div>
  </div>
  

  
  
 <table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Infomation</th>
      <th>Image</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stores.each do |store| %>
      <tr>
        <td><%= store.name %></td>
        <td><%= store.address %></td>
        <td><%= store.infomation %></td>
        <td><%= store.image %></td>
        <td><%= store.user %></td>
        <td><%= link_to 'Show', store %></td>
        <td><%= link_to 'Edit', edit_store_path(store) %></td>
        <td><%= link_to 'Destroy', store, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
 </table>

  <br>

  <%= link_to 'New Store', new_store_path %>

 </div>
</div>



