<%= form_with(model: store, local: true) do |form| %>
  <% if store.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(store.errors.count, "error") %> prohibited this store from being saved:</h2>

      <ul>
      <% store.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-3">
      <strong>店名</strong>
    </div>
    <div class="col-md-9">
      <%= form.text_field :name, :size=>"50" %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-3">
      <strong>住所</strong>
    </div>
    <div class="col-md-9">
      <%= form.text_field :address, :size=>"50" %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-3">
      <strong>情報</strong>
    </div>
    <div class="col-md-9">
      <%= form.text_area :infomation, :size=>"50x10" %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-3">
      <strong>写真</strong>
    </div>
    <div class="col-md-9">
      <%= form.file_field :image %>
    </div>
  </div>

  <div class="actions text-center">
    <%= form.submit :登録 %>
  </div>
<% end %>
