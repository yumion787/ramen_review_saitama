<div id="whole" class="" style="padding: 50px 0px;">
 <div class="center jumbotron">
  <div class="text-center" style="padding: 50px;">
    <h2>店舗詳細</h2>
  </div>

  <p id="notice"><%= notice %></p>

 
  <div class="card mb-3">
     <div class="container no-gutters">
        <div class="row">
           <div class="col-md-3">
              <h5><strong>店名</strong></h5>
           </div>
           <div class="col-md-9">
              <h5><%= @store.name %></h5>
           </div>
        </div>
        
        </br>
        
        <div class="row">
           <div class="col-md-3">
              <h5><strong>住所</strong></h5>
           </div>
           <div class="col-md-9">
              <h5><%= @store.address %></h5>
           </div>
        </div>
        
        </br>
        
        <div class="row">
           <div class="col-md-3">
              <h5><strong>情報</strong></h5>
           </div>
           <div class="col-md-9">
              <h5><%= simple_format(@store.infomation) %></h5>
           </div>
        </div>
        
        </br>
        
        <div class="row">
           <div class="col-md-3">
              <h5><strong>写真</strong></h5>
           </div>
           <div class="col-md-9">
               <% if @store.image? %>
               <%= image_tag @store.image.url, :size =>'200x200' %>
               <% end %>
           </div>
        </div>
        
        </br>
        
    </div>
  </div>
  
  <div class="card mb-3">
     <div class="container no-gutters">
         
         <div class="text-center">
           <h3>レビュー</h3>
         </div>
         
         <br>
         <br>
         
         <% @comments.each do |comment| %>
         
         <div class="row">
             <div class="col-md-3">
                 <h6><strong>メニュー</strong></h6>
             </div>
             <div class="col-md-9">
                 <h6><%= comment.menu %></h6>
             </div>
         </div>
         
         </br>
         
         <div class="row">
             <div class="col-md-3">
                 <h6><strong>コメント</strong></h6>
             </div>
             <div class="col-md-9">
                 <h6><%= comment.body %></h6>
             </div>
         </div>
         <div class="text-right">
           <%= link_to 'レビュー詳細', comment, class: 'btn btn-primary' %>
         </div>
         <% if logged_in? %>
         <div class="text-right">
            <%= link_to '削除', comment_path(comment), method: :delete, data: { confirm: '削除しますか？' }, class: 'btn btn-danger' %>
         </div>
         <% end %>
         
         <hr>
         
         <% end %>
         
         </br>
         </br>
         </br>
         
         <div class="text-center">
           <h4>投稿フォーム</h4>
         </div>
         
         <br>
         
         <%= render 'comments/form', comment: @comment %>
         
         <br>
         
       </div>
       
       
     </div>
  


<!--#フォローボタン-->
<div class="text-center">
    <div class="btn">
    <%= render 'favorites/follow_button', store: @store %>
    </div>
</div>
</br>

<% if logged_in? %>
<div class="text-center">
  <%= link_to '店舗情報修正', edit_store_path(@store), class: 'btn btn-primary' %> 
</div>
<% end %>

</br>

<div class="text-center">
  <%= link_to '戻る', stores_path, class: 'btn btn-primary' %>
</div>


 </div>
</div>
