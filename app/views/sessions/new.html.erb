<div id="whole" class="" style="padding: 50px 0px;">
 <div class="center jumbotron">
     <div class="text-center" style="padding: 50px;">
        <h2>ログイン</h2>
     </div>

  <div class="row">
    

    <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
      
      <div class="form-group row">
        <div class="col-md-4">
          <%= f.label :email, 'メールアドレス' %>
        </div>
        <div class="col-md-8">
          <%= f.email_field :email, class: 'form-control', :size=>"80" %>
        </div>
     </div>
     
     <div class="form-group row">
        <div class="col-md-4">
          <%= f.label :password, 'パスワード' %>
        </div>
        <div class="col-md-8">
          <%= f.password_field :password, class: 'form-control', :size=>"80" %>
        </div>
     </div>

     <div class="form-group row">
        <div class="col-md-4">
          <%= f.label :password, 'パスワード確認用' %>
        </div>
        <div class="col-md-8">
          <%= f.password_field :password, class: 'form-control', :size=>"80" %>
        </div>
     </div>
     
     <div class="text-center">
          <%= f.submit 'ログイン', class: 'btn btn-primary btn-large active' %>
      </div>
    <% end %>
    
    <div class="text-center">
       <p>新規ユーザーですか? <a href="/signup" class="btn btn-primary">ユーザー登録</a></p>
       <!--<%= link_to 'ユーザー登録', signup_path %>-->
    </div>
  </div>
 </div>
</div>

<div id="footer" class="text-center mb-5">
  <a class="" href="/">お問い合わせ</a>
  <br></br>
  <p>@ Takuya</p>
</div>