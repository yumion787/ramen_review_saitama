<% if logged_in? %>
  <% if current_user.favstore?(store) %>
    <%= form_with(model: current_user.favorites.find_by(store_id: store.id), local: true, method: :delete) do |f| %>
      <%= hidden_field_tag :store_id, store.id %>
      <%= f.submit 'お気に入り解除', class: 'btn btn-danger btn-block' %>
    <% end %>
  <% else %>
    <%= form_with(model: current_user.favorites.build, local: true) do |f| %>
      <%= hidden_field_tag :store_id, store.id %>
      <%= f.submit 'お気に入り', class: 'btn btn-primary btn-block' %>
    <% end %>
  <% end %>
<% end %>
