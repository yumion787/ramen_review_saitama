<div id="whole" class="" style="padding: 50px 0px;">
 <div class="center jumbotron">
  <div class="text-center" style="padding: 50px;">
    <h2>レビュー詳細</h2>
  </div>

　<p id="notice"><%= notice %></p>
　
　<div class="card mb-3">
     <div class="container no-gutters">
        <div class="row">
           <div class="col-md-3">
               <strong>メニュー</strong>
           </div>
           <div class="col-md-9">
               <%= @comment.menu %>
           </div>
        </div>
        
        </br>
        
        <div class="row">
           <div class="col-md-3">
               <strong>コメント</strong>
           </div>
           <div class="col-md-9">
               <%= simple_format(@comment.body) %>
           </div>
        </div>
        
        
        
        
    </div>
  </div>
  
  <br>
  
  <% if logged_in? %>
  <div class="text-center">
     <%= link_to 'レビュー修正', edit_comment_path(@comment), class: 'btn btn-primary' %>
  </div>
  <% end %>
  </br>
  <div class="text-center">
     <%= link_to '戻る', comments_path, class: 'btn btn-primary' %>
  </div>



 </div>
</div>
